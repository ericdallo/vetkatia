.jumbotron.less-padding.fixed-glow
  h2.margin-title
    span.label.label-warning Alterar dados
  div

    = form_for @user,method: "PUT" do |f|
      = f.label "Nome de UsuÃ¡rio", class: "input-margin"
      = f.text_field :name, class: 'form-control input-md chat-input input-margin', value: @current_user.name,:disabled => "disabled"
      = f.label "E-mail", class: "input-margin"
      = f.email_field :email, class: 'form-control input-md chat-input input-margin', value: @current_user.email,:disabled => "disabled"
